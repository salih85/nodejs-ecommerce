<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Products Management</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

  <%- include('navbar') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
      <h3>Products</h3>
    </div>

    <div class="table-responsive shadow-sm rounded">
      <table class="table table-hover table-bordered">
        <thead class="thead-dark">
          <tr>
            <th style="width: 10%;">Image</th>
            <th style="width: 30%;">Name</th>
            <th style="width: 15%;">Price</th>
            <th style="width: 15%;">Stock</th>
            <th style="width: 15%;">Update</th>
            <th style="width: 15%;">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(p => { %>
            <tr>
              <td>
                <img src="<%= p.image || '/images/no-image.png' %>" alt="<%= p.name %>" 
                     class="img-thumbnail" style="max-width: 80px;">
              </td>
              <td><%= p.name %></td>
              <td>â‚¹<%= p.price %></td>
              <td><%= p.stock %></td>
              <td>
                <a href="/admin/products/update/<%= p._id %>" class="btn btn-sm btn-warning">Update</a>
              </td>
              <td>
                <form action="/admin/products/delete/<%= p._id %>" method="post" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap 4 JS + dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
